                :حل التمرين الاول✓

#include<stdio.h>
int main() 
 {
   int i, j;
   char mat[5][5]=
   {
          {'1' ,'2' ,'3' ,'4' ,'5'},
         {'7' ,'a' ,'c' ,'8' ,'d'},
         {'c' ,'9' ,'4' ,'z', '8'},
         {'5' ,'6' ,'p' ,'n' ,'3'},
         {'2' ,'9' ,'t' ,'m' ,'k'}
   };
   
   for(i=0; i<5; i++) 
    {
    for(j=0; j<5; j++) {
    printf("%c \t", mat[i][j]);
    } 
    printf("\n");  
   }  
   
   printf(" les lignes pair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2==0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
  
  
  printf(" les lignes impair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2 !=0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
   
  printf(" la 1er diagonale= \n ");
  for(i=0 ;i<5 ;i++)
  printf("%c \t",mat[i][i]);
   
  printf(" la 2eme  diagonale= \n ");
  for(i=0 ; i<5 ;i++)
  for(j=0;j<5;j++)
  if(j+i==4)
  printf("%c \t", mat[i][j]);
  
  
return 0;
 } 

             حل التمرين الثاني ✓

#include <stdio.h>
int main() {
int c,i,j,mat[4][4] ,mat2[4][4];

printf("mat[4][4]=\n");
c=1;
for(i=0;i<4;i++){
for(j=0;j<4;j++){
mat[i][j]=c; 
c++;}
}
for(i=0;i<4;i++){
for(j=0;j<4;j++){
printf("%d \t",mat[i][j]);
}printf ("\n");
}

printf("\n");
printf("mat2[4][4]=\n");
for(j=0;j<4;j++)
for(i=0;i<4;i++)
mat2[i][j]=mat[j][i];


for(i=0;i<4;i++){
for(j=0;j<4;j++){
printf("%d \t",mat2[i][j]);}
printf("\n");}

}
