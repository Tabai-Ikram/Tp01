               // :حل التمرين الاول✓

#include<stdio.h>
int main() 
 {
   int i, j;
   char mat[5][5]=
   {
          {'1' ,'2' ,'3' ,'4' ,'5'},
         {'7' ,'a' ,'c' ,'8' ,'d'},
         {'c' ,'9' ,'4' ,'z', '8'},
         {'5' ,'6' ,'p' ,'n' ,'3'},
         {'2' ,'9' ,'t' ,'m' ,'k'}
   };
   
   for(i=0; i<5; i++) 
    {
    for(j=0; j<5; j++) {
    printf("%c \t", mat[i][j]);
    } 
    printf("\n");  
   }  
   
   printf(" les lignes pair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2==0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
  
  
  printf(" les lignes impair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2 !=0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
   
  printf(" la 1er diagonale= \n ");
  for(i=0 ;i<5 ;i++)
  printf("%c \t",mat[i][i]);
   
  printf(" la 2eme  diagonale= \n ");
  for(i=0 ; i<5 ;i++)
  for(j=0;j<5;j++)
  if(j+i==4)
  printf("%c \t", mat[i][j]);
  
  
return 0;
 } 

             //حل التمرين الثاني ✓

#include <stdio.h>
int main() {
int c,i,j,mat[4][4] ,mat2[4][4];

printf("mat[4][4]=\n");
c=1;
for(i=0;i<4;i++){
for(j=0;j<4;j++){
mat[i][j]=c; 
c++;}
}
for(i=0;i<4;i++){
for(j=0;j<4;j++){
printf("%d \t",mat[i][j]);
}printf ("\n");
}

printf("\n");
printf("mat2[4][4]=\n");
for(j=0;j<4;j++)
for(i=0;i<4;i++)
mat2[i][j]=mat[j][i];


for(i=0;i<4;i++){
for(j=0;j<4;j++){
printf("%d \t",mat2[i][j]);}
printf("\n");}

}



          //:حل التيبي الثاني ✓
#include<stdio.h>
#include<stdlib.h>
#include<string.h>

char *chargerchaine(int n)
{ char *ch;
 scanf("%d",&n); 
 gets(ch);
}

int longueur(char *ch)
{ int i;
 gets(ch);
 while(ch != "\0"){ 
 ch++; i++; 
 }
 return i;
}
void chargertab(char *p, char tab[])
{int n;
  scanf("%d",&n);
  for(p=tab;p<tab+n;p++)
  scanf("%c",*p);
}
void inversertab(char tab[],char t[] , int m ) 
{ char *p1,*p2;
  scanf("%d",&m );
  p2=t; p1=tab;  
 for (p1=tab;p1<tab+m;p1++)
 scanf("%c",*p1);
 for (p1=tab;p1<tab+m;p1++)
 for (p2=t+m-1;p2>=t;p2--)
 *p2=*p1;
}
 void affichertab(char tab[] , int m)
 { char *p;
  scanf("%d",&m);
  for(p=tab;p<tab+m ;p++)
  printf("%c",*p);
 }
 int main()
 {
  char *ch ; int n;
  printf("veuillez saisir la taille maximale de la chaine :\n");
  scanf("%d",&n) ; ch=chargerchaine(n);
  int m = longueur(ch);
  printf("m=%d",m);
  char tab[m] , t[m];
  chargertab(ch,tab);
  affichertab(tab,m);
  inversertab(tab ,t,m);
  affichertab(t,m);
  free(ch);
  
  return 0;
 
 }
